@model IEnumerable<Practical_13_Task2.Models.Designation>

@{
    ViewBag.Title = "Index";
}

<h2>Designation List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DesignationName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DesignationName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DesignationId }) |
            @Html.ActionLink("Details", "Details", new { id=item.DesignationId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DesignationId },new {onclick = "return confirm('Are you sure you want to delete this?');"})
        </td>
    </tr>
}

</table>
